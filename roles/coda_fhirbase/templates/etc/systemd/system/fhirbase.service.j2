[Unit]
Description=Podman service for {{ coda_fhirbase_service_name }}
After=network.target

[Service]
Type=simple

User={{ coda_fhirbase_user }}
Group={{ coda_fhirbase_group }}

# Take no chances, force a stop and remove before starting.
# NOTE: In podman v1.6 there's no --ignore switches for «stop» and «rm»
ExecStartPre=-/usr/bin/podman stop --time {{ coda_fhirbase_container_stop_timeout }} {{ coda_fhirbase_service_name }}
ExecStartPre=-/usr/bin/podman rm --force {{ coda_fhirbase_service_name }}
ExecStartPre=-/usr/bin/rm -f {{ coda_fhirbase_container_pidfile }} {{ coda_fhirbase_container_cidfile }}
ExecStartPre=-/usr/bin/pkill -u {{ coda_fhirbase_user }} --signal 15
ExecStartPre=-/usr/bin/sleep 5
ExecStartPre=-/usr/bin/pkill -u {{ coda_fhirbase_user }} --signal 9
ExecStartPre=/bin/mkdir -p /tmp/%n.tmp

ExecStart=/usr/bin/podman run --name {{ coda_fhirbase_service_name }} \
  --conmon-pidfile {{ coda_fhirbase_container_pidfile }} \
  --cidfile {{ coda_fhirbase_container_cidfile }} \
  --env-file /etc/default/{{ coda_fhirbase_service_name }} \
  --log-driver journald \
  --network host \
  --publish {{ coda_fhirbase_port }}:3000 \
  --volume /tmp/%n.tmp:/tmp:z \
  --rm --detach \
  {{ coda_fhirbase_image_repo }}/{{ coda_fhirbase_image_name }}:{{ coda_fhirbase_image_tag }}

# Stop and remove
# NOTE: In podman v1.6 there's no --ignore switches for «stop» and «rm»
ExecStop=-/usr/bin/podman stop --time {{ coda_fhirbase_container_stop_timeout }} {{ coda_fhirbase_service_name }}
ExecStop=-/usr/bin/podman rm --force {{ coda_fhirbase_service_name }}
ExecStop=-/usr/bin/pkill -u {{ coda_fhirbase_user }} --signal 15
ExecStop=-/usr/bin/sleep 5
ExecStop=-/usr/bin/pkill -u {{ coda_fhirbase_user }} --signal 9

Restart=on-failure
RestartSec={{ coda_fhirbase_systemd_restart_sec }}
TimeoutStartSec={{ coda_fhirbase_systemd_timeout_start_sec }}

KillMode=none
PIDFile={{ coda_fhirbase_container_pidfile }}

[Install]
WantedBy=multi-user.target
